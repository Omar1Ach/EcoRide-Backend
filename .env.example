# EcoRide Environment Variables Template
# Copy this file to .env and update with your actual values

# Database (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=EcoRide
DATABASE_USER=ecoride_user
DATABASE_PASSWORD=EcoRide2025!Strong
CONNECTION_STRING=Host=localhost;Port=5432;Database=EcoRide;Username=ecoride_user;Password=EcoRide2025!Strong;

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=EcoRide2025!Redis
REDIS_CONNECTION_STRING=localhost:6379,password=EcoRide2025!Redis,abortConnect=false

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=ecoride
RABBITMQ_PASSWORD=EcoRide2025!Rabbit
RABBITMQ_CONNECTION_STRING=amqp://ecoride:EcoRide2025!Rabbit@localhost:5672

# Seq Logging
SEQ_URL=http://localhost:5341
SEQ_API_KEY=

# JWT Settings
JWT_SECRET_KEY=YourSuperSecretKey256BitsLongMinimumForProductionUse!!
JWT_ISSUER=EcoRide
JWT_AUDIENCE=EcoRide.Users
JWT_ACCESS_TOKEN_EXPIRY_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7

# Twilio SMS
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1234567890

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Mapbox Maps
MAPBOX_ACCESS_TOKEN=pk.ey...

# Azure Blob Storage (Optional)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...;AccountKey=...;EndpointSuffix=core.windows.net

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5000;https://localhost:5001
